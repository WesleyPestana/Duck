<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.com.dunoans.duck">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".DuckApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".NovoProdutoActivity"></activity>
        <activity
            android:name=".ProdutoActivity"
            android:parentActivityName=".TelaInicialActivity"
            android:theme="@style/AppTheme.Toolbar" />
        <activity android:name=".ConfigActivity" />
        <activity android:name=".DespesaActivity" />
        <activity android:name=".FornecedorActivity" />
        <activity
            android:name=".TelaInicialActivity"
            android:theme="@style/AppTheme.Toolbar" />
        <activity
            android:name=".MainActivity"
            android:theme="@style/NoTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>